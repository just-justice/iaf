@model A7mvc.Models.User
@{
    ViewData["Title"] = "Create Account";
}

<h1>Create Account</h1>

<div style="width: 350px; margin: 0 auto; text-align: left;">
    <form method="post" style="display: flex; flex-direction: column; gap: 10px;">
        <label for="username">Username:</label>
        <input asp-for="Username" id="username" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="Username" style="color: red;"></span>

        <label for="email">Email:</label>
        <input asp-for="Email" id="email" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="Email" style="color: red;"></span>

        <label for="password">Password:</label>
        <input asp-for="Password" id="password" type="password" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="Password" style="color: red;"></span>

        <label for="age">Age:</label>
        <input asp-for="Age" id="age" type="number" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="Age" style="color: red;"></span>

        <label for="phone">Phone Number:</label>
        <input asp-for="PhoneNumber" id="phone" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="PhoneNumber" style="color: red;"></span>

        <label for="dob">Date of Birth:</label>
        <input asp-for="DateOfBirth" id="dob" type="date" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="DateOfBirth" style="color: red;"></span>

        <label for="address">Address:</label>
        <input asp-for="Address" id="address" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="Address" style="color: red;"></span>

        <label for="donation">Donation (Nrs.):</label>
        <input asp-for="Donation" id="donation" type="number" style="padding: 5px; width: 100%;" />
        <span asp-validation-for="Donation" style="color: red;"></span>

        <button type="submit" style="cursor: pointer; padding: 8px; border: none;">Create Account</button>
    </form>
</div>


