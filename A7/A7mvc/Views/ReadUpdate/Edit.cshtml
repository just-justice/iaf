@model A7mvc.ViewModels.ProductCategoryViewModel

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label class="form-label">ID</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Active Status</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true" selected="@Model.IsActive">True</option>
            <option value="false" selected="@(Model.IsActive ? false : true)">False</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
